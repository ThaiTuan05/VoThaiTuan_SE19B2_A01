<Window x:Class="VoThaiTuanWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:VoThaiTuanWPF.ViewModels"
        Title="Login - FUMiniHotelSystem"
        Height="480" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F4F7FA"
        FontFamily="Segoe UI">

    <Window.DataContext>
        <local:LoginViewModel/>
    </Window.DataContext>

    <!-- 
      NO NEED FOR <Window.Resources> ANYMORE
      All Styles have been moved to App.xaml 
    -->

    <Grid>
        <!-- Center container -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border CornerRadius="12"
                    Padding="0"
                    Background="White"
                    Width="360">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0" Color="#000000" Opacity="0.1" BlurRadius="20"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="140"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>

                    <!-- Header area -->
                    <Border Grid.Row="0" CornerRadius="12,12,0,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <!-- C�c m�u n�y gi? cung c� th? d�ng StaticResource t? App.xaml n?u b?n mu?n -->
                                <GradientStop Color="{Binding Source={StaticResource ThemeAccentBrush}, Path=Color}" Offset="0" />
                                <GradientStop Color="{Binding Source={StaticResource ThemePrimaryBrush}, Path=Color}" Offset="1" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Path Data="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8h5z" Fill="White" Width="24" Height="24" Margin="0,0,0,8" Stretch="Uniform"/>
                            <TextBlock Text="FUMiniHotelSystem" Foreground="White" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Hotel Management" Foreground="#E6F2FF" FontSize="12" Margin="0,6,0,0" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Form content -->
                    <StackPanel Grid.Row="1" Margin="24">
                        <!-- C�c TextBlock n�y cung c� th? d�ng Style n?u b?n mu?n -->
                        <TextBlock Text="Email" FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,6,0,4"/>
                        <TextBox x:Name="EmailTextBox"
                                 Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource LoginTextBoxStyle}"/>
                        <!-- ^ Style n�y gi? du?c l?y t? App.xaml -->

                        <TextBlock Text="Password" FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,12,0,4"/>
                        <PasswordBox x:Name="PasswordBox"
                                     Style="{StaticResource LoginPasswordBoxStyle}"/>
                        <!-- ^ Style n�y gi? du?c l?y t? App.xaml -->

                        <!-- Actions -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                            <TextBlock Text="Forgot password?" 
                                       Foreground="{StaticResource ThemePrimaryBrush}" 
                                       FontSize="12" 
                                       Cursor="Hand" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,6,0"/>
                        </StackPanel>

                        <Button Content="Login"
                                Margin="0,16,0,6"
                                Style="{StaticResource LoginButtonStyle}"
                                Command="{Binding LoginCommand}"/>
                        <!-- ^ �� G? B? CommandParameter d? kh?p v?i logic .xaml.cs c?a b?n -->

                        <TextBlock Text="{Binding ErrorMessage}"
                                   Foreground="{StaticResource DangerBrush}"
                                   FontSize="12"
                                   HorizontalAlignment="Center"
                                   Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"
                                   TextWrapping="Wrap"
                                   Margin="0,6,0,0"/>
                    </StackPanel>

                    <!-- Footer note -->
                    <Border Grid.Row="2" Background="#FAFBFC" CornerRadius="0,0,12,12">
                        <TextBlock Text="� 2025 FUMiniHotelSystem - Version 1.0"
                                   FontSize="11"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>

