<Window x:Class="VoThaiTuanWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VoThaiTuanWPF.ViewModels"
        xmlns:views="clr-namespace:VoThaiTuanWPF.Views"
        mc:Ignorable="d"
        Title="FUMiniHotelSystem - Admin Panel" 
        Height="720" 
        Width="1280"
        WindowStartupLocation="CenterScreen"
        MinWidth="1024"
        MinHeight="600"
        Background="#F9FAFB">

    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.Resources>
            <!-- DataTemplates to map ViewModels to Views for inline rendering -->
            <DataTemplate DataType="{x:Type local:CustomersViewModel}">
                <views:CustomersView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type local:RoomsViewModel}">
                <views:RoomsView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type local:ViewModelPlaceholder}">
                <Border Background="White" Padding="20" CornerRadius="8" BorderBrush="#E5E7EB" BorderThickness="1">
                    <TextBlock Text="{Binding Message}" 
                               Foreground="{StaticResource TextSecondaryBrush}" 
                               FontSize="16"/>
                </Border>
            </DataTemplate>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <!-- Navigation Menu Column -->
            <ColumnDefinition Width="240"/>
            <!-- Main Content Column -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ========================================================== -->
        <!-- 1. LEFT NAVIGATION PANEL (NAV) -->
        <!-- ========================================================== -->
        <Border Grid.Column="0" Background="White" BorderThickness="0,0,1,0" BorderBrush="#E5E7EB">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- 1. Header (Logo) -->
                    <RowDefinition Height="*"/>
                    <!-- 2. Menu (Buttons) -->
                    <RowDefinition Height="Auto"/>
                    <!-- 3. Footer (Logout) -->
                </Grid.RowDefinitions>

                <!-- 1. Header (Logo/App Name) -->
                <StackPanel Grid.Row="0" Height="60" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                    <!-- Icon removed as requested -->
                    <TextBlock Text="FUMiniHotel" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource TextPrimaryBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- 2. Menu (C�c n�t) -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="8,0">
                    <StackPanel>

                        <RadioButton Style="{StaticResource NavRadioButtonStyle}"
                                     Command="{Binding CustomerButtonCommand}"
                                     IsChecked="{Binding IsCustomersViewSelected}">
                            <StackPanel Orientation="Horizontal">
                                <!-- Icon removed as requested -->
                                <TextBlock Text="Customers" VerticalAlignment="Center"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource NavRadioButtonStyle}"
                                     Command="{Binding RoomButtonCommand}"
                                     IsChecked="{Binding IsRoomsViewSelected}">
                            <StackPanel Orientation="Horizontal">
                                <!-- Icon removed as requested -->
                                <TextBlock Text="Rooms" VerticalAlignment="Center"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource NavRadioButtonStyle}"
                                     Command="{Binding BookingButtonCommand}"
                                     IsChecked="{Binding IsBookingsViewSelected}">
                            <StackPanel Orientation="Horizontal">
                                <!-- Icon removed as requested -->
                                <TextBlock Text="Bookings" VerticalAlignment="Center"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource NavRadioButtonStyle}"
                                     Command="{Binding ReportButtonCommand}"
                                     IsChecked="{Binding IsReportViewSelected}">
                            <StackPanel Orientation="Horizontal">
                                <!-- Icon removed as requested -->
                                <TextBlock Text="Report" VerticalAlignment="Center"/>
                            </StackPanel>
                        </RadioButton>

                    </StackPanel>
                </ScrollViewer>

                <!-- 3. Logout Area (Bottom) -->
                <Border Grid.Row="2" BorderThickness="0,1,0,0" BorderBrush="#E5E7EB" Padding="8">

                    <!-- ======================================================= -->
                    <!-- FIX HERE: Style has been changed to "NavButtonStyle" -->
                    <!-- ======================================================= -->
                    <Button Style="{StaticResource NavButtonStyle}"
                            Command="{Binding LogoutButtonCommand}"
                            Background="Transparent"
                            BorderThickness="0"
                            HorizontalContentAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <!-- Icon removed as requested -->
                            <TextBlock Text="Logout" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Border>
            </Grid>
        </Border>

        <!-- ========================================================== -->
        <!-- 2. MAIN CONTENT AREA (CONTENT) -->
        <!-- ========================================================== -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <!-- Header (Page Title) -->
                <RowDefinition Height="*"/>
                <!-- Content (Page Content) -->
            </Grid.RowDefinitions>

            <!-- Header (Page Title) -->
            <Border Grid.Row="0" Background="White" BorderThickness="0,0,0,1" BorderBrush="#E5E7EB">
                <TextBlock Text="{Binding CurrentViewTitle}"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Margin="24,0"/>
            </Border>

            <!-- Content (Page Content) -->
            <Border Grid.Row="1" Background="{StaticResource AppBackgroundBrush}" Padding="20">
                <!-- 
                METHOD 1: USE ContentControl (Standard MVVM approach)
                Bind this Grid with a UserControl through the {Binding CurrentView} property in ViewModel
                -->
                <ContentControl x:Name="ActiveItem" 
                                Content="{Binding CurrentView}" 
                                VerticalAlignment="Stretch" 
                                HorizontalAlignment="Stretch"/>


            </Border>
        </Grid>
    </Grid>
</Window>

